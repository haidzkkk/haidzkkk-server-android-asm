<div class="container">
    <h1>Danh sách sản phẩm</h1>

    <a href="/product/form" class="btn btn-primary mb-3">Thêm sản phẩm</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Index</th>
                <th></th>
                <th>Name</th>
                <th>Price</th>
                <th>Color</th>
                <th>Type</th>
                <th>Customer ID</th>
                <th>Customer Name</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(function(product, i) { %>
                <tr>
                    <td style="vertical-align: middle;">
                        <%= i + 1 %>                                           
                    </td>
                    <td style="vertical-align: middle;">
                        <img src="<%= product.path %>" alt="" width="100" height="100">                                        
                    </td>
                    <td style="vertical-align: middle;">
                        <%= product.name %>                                           
                    </td>
                    <td style="vertical-align: middle;">
                        <%= product.price + "" %> đ
                    </td>
                    <td style="vertical-align: middle;">
                        <input type="color" value="<%= product.color%>" disabled>
                    </td >
                    <td style="vertical-align: middle;">
                        <%= product.type %>
                    </td>
                    <td style="vertical-align: middle;">
                        <%= product.makhachhang %>
                    </td>
                    <td style="vertical-align: middle;">
                        <%= product.tenkhachhang %>
                    </td>
                    <td style="vertical-align: middle;"><a href="/product/form/<%= product._id %>" class="btn btn-warning">Sửa</a></td>
                    <td style="vertical-align: middle;">
                        <form action="/product/delete/<%= user.id %>" method="POST">
                            <button class="btn btn-danger delete-btn" data-id="<%= product._id %>">Xóa</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
</div>
<script>
    const deleteButtons = document.querySelectorAll('.delete-btn');
    deleteButtons.forEach(button => {
        button.addEventListener('click', function (event) {
            event.preventDefault();
            const id = button.dataset.id;
            const result = confirm('Bạn có chắc muốn xóa này không?');
            if (result) {
                url = "/product/delete/" + id;
                fetch(url, {
                    method: 'DELETE',
                })
                    .then(response => {
                        window.location.href = "/product"
                    })
                    .catch(error => {
                        // handle network error
                    });
            }
        });
    });
</script>